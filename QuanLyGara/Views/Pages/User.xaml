<UserControl x:Class="QuanLyGara.Views.Pages.User"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:local="clr-namespace:QuanLyGara.Views.Pages"
          xmlns:viewmodel="clr-namespace:QuanLyGara.ViewModels.Pages"
          mc:Ignorable="d" 
          d:DesignHeight="1600" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewmodel:UserViewModel/>
    </UserControl.DataContext>

    <ScrollViewer Style="{StaticResource customScrollViewer}">
        <Border Background="Aqua">
            <Button Margin="0 1500 0 0" Content="Test" Style="{StaticResource darkButtonStyle}"/>
        </Border>
    </ScrollViewer>
</UserControl>
