<UserControl x:Class="QuanLyGara.Views.Pages.Service"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyGara.Views.Pages"
             xmlns:viewmodel="clr-namespace:QuanLyGara.ViewModels.Pages"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:QuanLyGara.Behaviors"
             xmlns:services="clr-namespace:QuanLyGara.Services"
             xmlns:helpers="clr-namespace:QuanLyGara.Helpers"
             xmlns:components="clr-namespace:QuanLyGara.Components"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500">

    <UserControl.DataContext>
        <viewmodel:ServiceViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <services:NumberFormatConverter x:Key="NumberFormatConverter"/>
        <services:DecimalSeparatorConverter x:Key="DecimalSeparatorConverter"/>
        <services:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolToVis"/>
        <services:ModelAndTextConverter x:Key="ModelAndTextConverter"/>
        <services:InvertedBool x:Key="InvertedBool"/>
        <services:MultiBoolToVis x:Key="MultiBoolToVis"/>
        <services:ViewToVisibilityConverter x:Key="ViewToVisibilityConverter"/>
        <services:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
        <services:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <CollectionViewSource x:Key="GroupedImportList" Source="{Binding DanhSachPhieuSua}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="MonthYear"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    
    <ScrollViewer Style="{StaticResource customScrollViewer}">
        <Border Background="{StaticResource lightBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Visibility="{Binding CurrentView, Converter={StaticResource ViewToVisibilityConverter}, ConverterParameter=0}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="256"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Margin="8 0 0 0">
                        <StackPanel>
                            <TextBlock Text="Số xe sửa chữa trong ngày tối đa"
                                       Style="{StaticResource buttonText}"/>

                            <Grid Margin="0 8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Grid.Column="0"
                                         Style="{StaticResource middleTextBox}"
                                         Text="{Binding LimitPerDay}"
                                         Tag="Car"
                                         IsReadOnly="{Binding LimitIsReadOnly, Mode=TwoWay}"
                                         helpers:FocusExtension.IsFocused="{Binding LimitIsReadOnly, Converter={StaticResource InvertedBool}}">
                                    <i:Interaction.Behaviors>
                                        <behaviors:NumericInputBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBox>

                                <Button Grid.Column="1"
                                        Style="{StaticResource darkButtonStyle}"
                                        Padding="4"
                                        Margin="10,0,0,0"
                                        Command="{Binding EditLimitCommand}"
                                        Visibility="{Binding LimitIsReadOnly, Converter={StaticResource BoolToVis}}" 
                                        HorizontalAlignment="Left">

                                    <fa:IconImage Icon="Edit" 
                                                  Style="{StaticResource normalIconButton}"
                                                  Foreground="{StaticResource lightFont}"
                                                  Margin="0"/>
                                </Button>
                            </Grid>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0 0 0 8"
                                        Visibility="{Binding LimitIsReadOnly, Converter={StaticResource InvertedBoolToVis}}">            
                                <Button Style="{StaticResource darkButtonStyle}"
                                        Content="Lưu"
                                        Margin="0 0 8 0"
                                        FontSize="13"
                                        Padding="6 3"
                                        Command="{Binding SaveLimitCommand}"/>

                                <Button Style="{StaticResource lightButtonStyle}"
                                        Content="Hủy"
                                        FontSize="13"
                                        Padding="6 3"
                                        Command="{Binding CancelLimitCommand}"/>
                            </StackPanel>
                        </StackPanel>

                        <Grid Margin="0 12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Kiểm tra số tiền thu"
                                       Style="{StaticResource buttonText}"
                                       Grid.Column="0"/>
                            <CheckBox Style="{StaticResource ToggleCheckboxStyle}"
                                      Width="40"
                                      Grid.Column="2"
                                      IsChecked="{Binding ApplyCheckPayment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <StackPanel Margin="0 16">
                            <TextBlock Text="Sắp xếp theo"
                                       Style="{StaticResource buttonText}"
                                       FontWeight="Bold"
                                       Margin="0 0 0 8"/>

                            <Border Padding="8 4 4 4"
                                    BorderBrush="{StaticResource darkBorder}"
                                    BorderThickness="2"
                                    CornerRadius="5">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Tên xe"
                                           Style="{StaticResource buttonText}"/>

                                        <StackPanel Grid.Column="1"
                                            Orientation="Horizontal">
                                            <RadioButton Style="{StaticResource sortButton}"
                                                 Tag="SortAmountDown"
                                                 GroupName="sortGroup"
                                                 Margin="8 0"
                                                 IsChecked="True"
                                                 Command="{Binding SortCommand}"
                                                 CommandParameter="1"/>

                                            <RadioButton Style="{StaticResource sortButton}"
                                                 Tag="SortAmountUp"
                                                 GroupName="sortGroup"
                                                 Command="{Binding SortCommand}"
                                                 CommandParameter="2"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Margin="0 8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Tổng nợ"
           Style="{StaticResource buttonText}"/>

                                        <StackPanel Grid.Column="1"
            Orientation="Horizontal">
                                            <RadioButton Style="{StaticResource sortButton}"
                 Tag="SortAmountDown"
                 GroupName="sortGroup"
                 Margin="8 0"
                 Command="{Binding SortCommand}"
                 CommandParameter="3"/>

                                            <RadioButton Style="{StaticResource sortButton}"
                 Tag="SortAmountUp"
                 GroupName="sortGroup"
                 Command="{Binding SortCommand}"
                 CommandParameter="4"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Tên hiệu xe"
           Style="{StaticResource buttonText}"/>

                                        <StackPanel Grid.Column="1"
            Orientation="Horizontal">
                                            <RadioButton Style="{StaticResource sortButton}"
                 Tag="SortAmountDown"
                 GroupName="sortGroup"
                 Margin="8 0"
                 Command="{Binding SortCommand}"
                 CommandParameter="5"/>

                                            <RadioButton Style="{StaticResource sortButton}"
                 Tag="SortAmountUp"
                 GroupName="sortGroup"
                 Command="{Binding SortCommand}"
                 CommandParameter="6"/>
                                        </StackPanel>
                                    </Grid>

                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Margin="20 0">
                        <Grid Margin="0 0 8 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Danh sách xe"
                                   Style="{StaticResource buttonText}"
                                   FontSize="20"
                                   Grid.Column="0"/>

                            <TextBlock Style="{StaticResource buttonText}"
                                       Grid.Column="2"
                                       FontSize="18"
                                       HorizontalAlignment="Center"
                                       Margin="0 8">
                                <Run Text="Số xe đã sửa hôm nay: "/>
                                <Run Text="{Binding SoXeSuaChuaHomNay, Mode=OneWay}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding LimitPerDay}"/>
                            </TextBlock>
                        </Grid>

                        <Grid Margin="0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Style="{StaticResource darkButtonStyle}"
                                    Padding="8 4"
                                    Margin="10 0"
                                    Command="{Binding ToAddingCarCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="FolderPlus"
                                                  Style="{StaticResource normalIconButton}"
                                                  Foreground="{StaticResource lightFont}"/>
                                    <TextBlock Text="Thêm xe" 
                                               Style="{StaticResource buttonText}" 
                                               Foreground="{StaticResource lightFont}"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1"
                                    Style="{StaticResource darkButtonStyle}"
                                    Padding="8 4"
                                    Command="{Binding RemoveSelectedCarCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="TrashCan"
                                                  Style="{StaticResource normalIconButton}"
                                                  Foreground="{StaticResource lightFont}"/>
                                    <TextBlock Text="Xóa đã chọn" 
                                               Style="{StaticResource buttonText}" 
                                               Foreground="{StaticResource lightFont}"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                    Style="{StaticResource darkButtonStyle}"
                                    Padding="8 4"
                                    Margin="10 0"
                                    Command="{Binding ToRepairInfoCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="RectangleList"
                                              Style="{StaticResource normalIconButton}"
                                              Foreground="{StaticResource lightFont}"/>
                                    <TextBlock Text="Nội dung sửa chữa" 
                                           Style="{StaticResource buttonText}" 
                                           Foreground="{StaticResource lightFont}"/>
                                </StackPanel>
                            </Button>
                            
                            <TextBox Grid.Column="4"
                                     Style="{StaticResource iconTextBox}"
                                     Tag="Search"
                                     Width="300"
                                     helpers:TextBoxHelper.HintText="Tìm biển số"
                                     Text="{Binding SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <Grid Width="900">
                            <Border Background="{StaticResource darkBorder}"
                                    CornerRadius="10"
                                    VerticalAlignment="Top"
                                    Visibility="{Binding DanhSachXe, Converter={StaticResource NullToVisibilityConverter}}">
                                <DataGrid ItemsSource="{Binding DanhSachXe, Mode=TwoWay}"
                                      x:Name="BangXe"
                                      Style="{StaticResource NoScrollDataGridStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}" 
                                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                      RowStyle="{StaticResource DataGridRowStyle}"
                                      VerticalAlignment="Top">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="Auto">
                                            <DataGridTemplateColumn.Header>
                                                <CheckBox x:Name="HeaderCheckBox"
                                                      Style="{StaticResource DataGridCheckBoxStyle}"
                                                      IsChecked="{Binding DataContext.isAllChecked, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                      Command="{Binding DataContext.UpdateIsAllSelectedCommand,  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                                            </DataGridTemplateColumn.Header>

                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding isChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          Style="{StaticResource DataGridCheckBoxStyle}"
                                                          Command="{Binding DataContext.UpdateIsAllSelectedCommand,  RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTemplateColumn Header="Biển số" Width="160">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding bienSo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource aLineTextBox}"
                                                         IsReadOnly="{Binding IsReadOnly}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTemplateColumn Header="Tên xe" Width="260">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding tenXe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource aLineTextBox}"
                                                         IsReadOnly="{Binding IsReadOnly}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTemplateColumn Header="Hiệu xe" Width="160">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <components:FilteredComboBox
                                                    Style="{StaticResource lightComboBoxStyle}"
                                                    ItemsSource="{Binding DataContext.DanhSachHieuXeNotNull, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    SelectedItem="{Binding HieuXe, UpdateSourceTrigger=PropertyChanged}"
                                                    DisplayMemberPath="TenHieuXe"
                                                    IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertedBool}}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTextColumn Header="Tổng nợ"
                                                        IsReadOnly="True"
                                                        Width="160"
                                                        FontSize="16"
                                                        Binding="{Binding tienNo, Converter={StaticResource NumberFormatConverter}}"/>

                                        <DataGridTemplateColumn Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Right">
                                                        <Button Style="{StaticResource transparentButtonStyle}"
                                                            Command="{Binding DataContext.DetailCarCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="4"
                                                            Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}}">
                                                            <fa:IconImage Icon="FileText"
                                                                      Style="{StaticResource normalIconButton}"
                                                                      Foreground="{StaticResource darkFont}"
                                                                      Margin="0"/>
                                                        </Button>

                                                        <Button Style="{StaticResource transparentButtonStyle}"
                                                            Command="{Binding DataContext.EditCarCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="4"
                                                            Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}}">
                                                            <fa:IconImage Icon="Edit"
                                                                      Style="{StaticResource normalIconButton}"
                                                                      Foreground="{StaticResource darkFont}"
                                                                      Margin="0"/>
                                                        </Button>

                                                        <Button Style="{StaticResource transparentButtonStyle}"
                                                            Command="{Binding DataContext.RemoveCarCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="4"
                                                            Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}}">
                                                            <fa:IconImage Icon="TrashCan" 
                                                                      Style="{StaticResource normalIconButton}"
                                                                      Foreground="{StaticResource darkFont}"
                                                                      Margin="0"/>
                                                        </Button>

                                                        <Button Style="{StaticResource transparentButtonStyle}"
                                                            Command="{Binding DataContext.SaveCarCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="4"
                                                            Visibility="{Binding IsReadOnly, Converter={StaticResource InvertedBoolToVis}}">
                                                            <fa:IconImage Icon="Check"
                                                                      Style="{StaticResource normalIconButton}"
                                                                      Foreground="{StaticResource darkFont}"
                                                                      Margin="0"/>
                                                        </Button>

                                                        <Button Style="{StaticResource transparentButtonStyle}"
                                                            Command="{Binding DataContext.CancelCarCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="4"
                                                            Visibility="{Binding IsReadOnly, Converter={StaticResource InvertedBoolToVis}}">
                                                            <fa:IconImage Icon="Xmark" 
                                                                      Style="{StaticResource normalIconButton}"
                                                                      Foreground="{StaticResource darkFont}"
                                                                      Margin="0"/>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                    <DataGrid.RowDetailsTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="5"
                                                    Background="{StaticResource lightBackground}"
                                                    Padding="12"
                                                    Margin="12 8"
                                                    BorderThickness="2"
                                                    BorderBrush="{StaticResource darkBorder}">
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Tên chủ xe: "
                                                               Style="{StaticResource buttonText}"/>

                                                    <TextBox Text="{Binding tenChuXe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource aLineTextBox}"
                                                             IsReadOnly="{Binding IsReadOnly}"
                                                             Width="200"/>
                                                </StackPanel>
                                                
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="20 0">
                                                    <TextBlock Text="Số điện thoại: "
                                                               Style="{StaticResource buttonText}"/>

                                                        <TextBox Text="{Binding sdt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource aLineTextBox}"
                                                             IsReadOnly="{Binding IsReadOnly}" 
                                                             Width="120">
                                                            <i:Interaction.Behaviors>
                                                                <behaviors:NumericInputBehavior/>
                                                            </i:Interaction.Behaviors>
                                                        </TextBox>
                                                </StackPanel>


                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Email: "
                                                               Style="{StaticResource buttonText}"/>

                                                    <TextBox Text="{Binding email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource aLineTextBox}"
                                                             IsReadOnly="{Binding IsReadOnly}" 
                                                             Width="200"/>
                                                </StackPanel>
                                            </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </DataGrid.RowDetailsTemplate>
                                </DataGrid>
                            </Border>

                            <TextBlock Text="Không có dữ liệu"
                                       Margin="0 100 0 0"
                                       Visibility="{Binding DanhSachXe, Converter={StaticResource NullToCollapsedConverter}}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource buttonText}"
                                       FontSize="20"/>
                        </Grid>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding DanhSachHieuXe}"
                             HorizontalContentAlignment="Stretch"
                             VerticalContentAlignment="Top"
                             VerticalAlignment="Top"
                             Grid.Column="2">
                        <ListBox.Template>
                            <ControlTemplate>
                                <Border Background="{StaticResource darkButtonBackground}"
                                        CornerRadius="10"
                                        Padding="5 10 5 5">
                                    <StackPanel>
                                        <Grid Margin="4 0 4 8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Danh sách hiệu xe"
                                                       Style="{StaticResource buttonText}"
                                                       Foreground="{StaticResource lightFont}"/>

                                            <Button Style="{StaticResource lightButtonStyle}"
                                                    Command="{Binding AddBrandCommand}"
                                                    Padding="3"
                                                    Grid.Column="1">
                                                <fa:IconImage Icon="Add" 
                                                              Style="{StaticResource normalIconButton}"
                                                              Foreground="{StaticResource darkFont}"
                                                              Margin="0"/>
                                            </Button>
                                        </Grid>
                                        <Border Background="{StaticResource lightBackground}"
                                                CornerRadius="10">
                                            <Grid>
                                                <ItemsPresenter Visibility="{Binding DataContext.DanhSachHieuXe, Converter={StaticResource NullToVisibilityConverter}, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                                <TextBlock Text="Không có dữ liệu"
                                                           Margin="0 20"
                                                           Visibility="{Binding DataContext.DanhSachHieuXe, Converter={StaticResource NullToCollapsedConverter}, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Style="{StaticResource buttonText}"
                                                           FontSize="20"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </ListBox.Template>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Text="{Binding TenHieuXe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             x:Name="itemTextBox"
                                             Grid.Column="0"
                                             Style="{StaticResource middleTextBox}"
                                             IsReadOnly="{Binding IsReadOnly, Mode=TwoWay}"
                                             helpers:FocusExtension.IsFocused="{Binding IsReadOnly, Converter={StaticResource InvertedBool}}"/>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Column="1">
                                        <Button Command="{Binding DataContext.EditBrandCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource darkButtonStyle}"
                                                Padding="4"
                                                Margin="8 0 0 0"
                                                Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}, Mode=TwoWay}">
                                            <fa:IconImage Icon="Edit" 
                                                          Style="{StaticResource normalIconButton}"
                                                          Foreground="{StaticResource lightFont}"
                                                          Margin="0"/>
                                        </Button>

                                        <Button Command="{Binding DataContext.RemoveBrandCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource darkButtonStyle}"
                                                Padding="4"
                                                Margin="8 0 0 0"
                                                Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}, Mode=TwoWay}">
                                            <fa:IconImage Icon="TrashCan" 
                                                          Style="{StaticResource normalIconButton}"
                                                          Foreground="{StaticResource lightFont}"
                                                          Margin="0"/>
                                        </Button>

                                        <Button Command="{Binding DataContext.SaveBrandCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                Style="{StaticResource darkButtonStyle}"
                                                Padding="4"
                                                Margin="8 0 0 0"
                                                Visibility="{Binding IsReadOnly, Converter={StaticResource InvertedBoolToVis}, Mode=TwoWay}"
                                                CommandParameter="{Binding}">
                                            <fa:IconImage Icon="Check" 
                                                          Style="{StaticResource normalIconButton}"
                                                          Foreground="{StaticResource lightFont}"
                                                          Margin="0"/>
                                        </Button>

                                        <Button Command="{Binding DataContext.CancelBrandCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource darkButtonStyle}"
                                                Padding="4"
                                                Margin="8 0 0 0"
                                                Visibility="{Binding IsReadOnly, Converter={StaticResource InvertedBoolToVis}, Mode=TwoWay}">
                                             <fa:IconImage Icon="Xmark" 
                                                           Style="{StaticResource normalIconButton}"
                                                           Foreground="{StaticResource lightFont}"
                                                           Margin="0"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <Grid Grid.Row="1"
                      Visibility="{Binding CurrentView, Converter={StaticResource ViewToVisibilityConverter}, ConverterParameter=1}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Style="{StaticResource transparentButtonStyle}"
                            VerticalAlignment="Top"
                            Command="{Binding BackToView}"
                            Margin="0 0 8 0">
                        <fa:IconImage Icon="ArrowLeft" 
                                      Style="{StaticResource normalIconButton}"
                                      Margin="0"
                                      Width="28"
                                      Height="20"/>
                    </Button>
                    
                    <StackPanel VerticalAlignment="Top"
                                Grid.Column="1">
                        <TextBlock Style="{StaticResource buttonText}"
                                   FontSize="20"
                                   Margin="0 8">
                            <Run Text="Quản lý xe"/>
                            <Run Text="{Binding Path=SelectingCar.bienSo}"/>
                        </TextBlock>

                        <Grid Margin="8 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0"
                                  Margin="0 0 24 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240"/>
                                    <ColumnDefinition Width="900"/>
                                </Grid.ColumnDefinitions>

                                <Border Background="{StaticResource lightBackground}"
                                        CornerRadius="5"
                                        Padding="12 12 4 12"
                                        Grid.Column="0"
                                        BorderBrush="{StaticResource darkBorder}"
                                        BorderThickness="2"
                                        VerticalAlignment="Top"
                                        Margin="0 40 0 0">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource menuIconText}"
                                                   Text="Chọn phiếu sửa chữa"
                                                   Foreground="{StaticResource darkFont}"/>

                                        <ScrollViewer Style="{StaticResource customScrollViewer}"
                                                      MaxHeight="600"
                                                      Visibility="{Binding DanhSachPhieuSua, Converter={StaticResource NullToVisibilityConverter}}"
                                                      HorizontalAlignment="Center">
                                            <ItemsControl ItemsSource="{Binding Source={StaticResource GroupedImportList}}"
                                                          HorizontalContentAlignment="Center">
                                                <ItemsControl.GroupStyle>
                                                    <GroupStyle>
                                                        <GroupStyle.HeaderTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Name}"
                                                                           Style="{StaticResource menuIconText}"
                                                                           Foreground="{StaticResource darkFont}"
                                                                           Margin="0 12 0 4"/>
                                                            </DataTemplate>
                                                        </GroupStyle.HeaderTemplate>
                                                    </GroupStyle>
                                                </ItemsControl.GroupStyle>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <RadioButton Style="{StaticResource lightRadioButtonStyle}"
                                                                     Margin="2"
                                                                     GroupName="importList"
                                                                     HorizontalContentAlignment="Center"
                                                                     HorizontalAlignment="Stretch"
